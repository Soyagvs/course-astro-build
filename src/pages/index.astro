---
import Layout from "../layouts/Layout.astro";
import Hamburguer from "../components/Hamburguer.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Greeting from "../components/Greeting";

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<Layout title="Pagina de Inicio">
	<Hamburguer />
	<Header />
	<h1>Bienvenidos al curso de Astro</h1>
	<Greeting client:load messages={["Ho", "QuÃ©", "todos"]} />
	<p>
		Este curso fue hecho con el tutorial de la documentacion
		<a href="https://astro.build/" target="_blank">
			https://astro.build/
		</a>
	</p>
	<Footer />
</Layout>
<style define:vars={{ skillColor, fontWeight, textCase }}>
	h1 {
		color: purple;
		font-size: 4rem;
	}
	.skill {
		color: var(--skillColor);
		font-weight: var(--fontWeight);
		text-transform: var(--textCase);
	}
</style>
